<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovocompetitionapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LenovoCompetitionApp"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SCDoctorActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SCHospitalActivity"
            android:exported="true" />
        <activity
            android:name=".activities.IndexActivity"
            android:exported="true"
            android:label="@string/title_activity_index" >
        </activity>
        <activity
            android:name=".activities.TestActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" >
        </activity>
    </application>

</manifest>